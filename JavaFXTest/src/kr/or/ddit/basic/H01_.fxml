<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>


<VBox fx:controller="kr.or.ddit.basic.H01_Controller" 
maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
prefHeight="360.0" prefWidth="540.0" spacing="10.0" 
xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox>
         <children>
            <Label text="이름 : " />
            <TextField fx:id="textfield" />
         </children>
      </HBox>
      <HBox spacing="10.0">
         <children>
            <Label text="성별 : " />
            <RadioButton fx:id="male" mnemonicParsing="false" text="남" />
            <RadioButton fx:id="female" mnemonicParsing="false" text="여" />
            
         </children>
      </HBox>
      <HBox spacing="10.0">
         <children>
            <Label text="취미 : " />
            <CheckBox fx:id="ck1" mnemonicParsing="false" text="여행" />
            <CheckBox fx:id="ck2" mnemonicParsing="false" text="등산" />
            <CheckBox fx:id="ck3" mnemonicParsing="false" text="독서" />
            <CheckBox fx:id="ck4" mnemonicParsing="false" text="바둑" />
            <CheckBox fx:id="ck5" mnemonicParsing="false" text="장기" />
            <CheckBox fx:id="ck6" mnemonicParsing="false" text="게임" />
            <CheckBox fx:id="ck7" mnemonicParsing="false" text="테니스" />
            <CheckBox fx:id="ck8" mnemonicParsing="false" text="배드민턴" />
         </children>
      </HBox>
      <Button fx:id="btn" mnemonicParsing="false" prefWidth="50.0" text="보 기" onAction="#btnClicked" />
      <Pane prefHeight="200.0" prefWidth="400.0">
         <children>
            <TextArea fx:id="textarea" prefHeight="200.0" prefWidth="400.0" />
         </children>
      </Pane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
